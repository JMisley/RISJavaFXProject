<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="popupContainer" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.risjavafx.pages.orders.OrdersPopup">
    <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
        <Label text="New Order" textFill="WHITE" underline="true">
            <font>
                <Font name="Century Gothic" size="24.0"/>
            </font>
        </Label>
    </HBox>
    <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
        <Label text="Order ID:" textFill="WHITE">
            <font>
                <Font name="Century Gothic" size="14.0"/>
            </font>
            <HBox.margin>
                <Insets right="10.0"/>
            </HBox.margin>
        </Label>
        <Label fx:id="orderIDLabel" text="101" textFill="#bb86fc">
            <font>
                <Font name="Century Gothic Bold" size="14.0"/>
            </font>
        </Label>
    </HBox>
    <HBox alignment="CENTER" nodeOrientation="LEFT_TO_RIGHT" VBox.vgrow="ALWAYS">
        <Label text="Referral MD:" textFill="WHITE">
            <HBox.margin>
                <Insets right="10.0"/>
            </HBox.margin>
            <font>
                <Font name="Century Gothic" size="14.0"/>
            </font>
        </Label>
        <HBox HBox.hgrow="ALWAYS"/>
        <ComboBox fx:id="referralMdComboBox" maxHeight="30.0" HBox.hgrow="ALWAYS">
            <HBox.margin>
                <Insets/>
            </HBox.margin>
        </ComboBox>
    </HBox>
    <HBox alignment="CENTER" nodeOrientation="LEFT_TO_RIGHT" VBox.vgrow="ALWAYS">
        <Label text="Modality:" textFill="WHITE">
            <HBox.margin>
                <Insets right="10.0"/>
            </HBox.margin>
            <font>
                <Font name="Century Gothic" size="14.0"/>
            </font>
        </Label>
        <HBox HBox.hgrow="ALWAYS"/>
        <ComboBox fx:id="modalityComboBox" maxHeight="30.0" HBox.hgrow="ALWAYS">
            <HBox.margin>
                <Insets/>
            </HBox.margin>
        </ComboBox>
    </HBox>
    <HBox alignment="CENTER" nodeOrientation="LEFT_TO_RIGHT" VBox.vgrow="ALWAYS">
        <Label text="Patient:" textFill="WHITE">
            <HBox.margin>
                <Insets right="10.0"/>
            </HBox.margin>
            <font>
                <Font name="Century Gothic" size="14.0"/>
            </font>
        </Label>
        <HBox HBox.hgrow="ALWAYS"/>
        <ComboBox fx:id="patientComboBox" maxHeight="30.0" HBox.hgrow="ALWAYS">
            <HBox.margin>
                <Insets/>
            </HBox.margin>
        </ComboBox>
    </HBox>
    <VBox alignment="CENTER" maxHeight="100.0" VBox.vgrow="ALWAYS">
        <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="18.0" prefWidth="522.0" text="Notes:"
               textAlignment="CENTER" textFill="WHITE">
            <font>
                <Font name="Century Gothic" size="14.0"/>
            </font>
        </Label>

        <TextArea fx:id="notesTextArea">
            <font>
                <Font name="Arial" size="14.0"/>
            </font>
        </TextArea>
    </VBox>
    <VBox alignment="CENTER" maxHeight="300.0" VBox.vgrow="ALWAYS">
        <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="18.0" prefWidth="577.0" text="Report:"
               textAlignment="CENTER" textFill="WHITE">
            <font>
                <Font name="Century Gothic" size="14.0"/>
            </font>
        </Label>

        <TextArea fx:id="reportTextArea">
            <font>
                <Font name="Arial" size="14.0"/>
            </font>
        </TextArea>
    </VBox>
    <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
        <Button id="primaryButton" fx:id="cancelButton" alignment="CENTER" contentDisplay="CENTER" maxHeight="60.0"
                maxWidth="200.0" mnemonicParsing="false" onAction="#cancelButtonOnclick" text="Cancel"/>
        <HBox HBox.hgrow="ALWAYS"/>
        <Button id="primaryButton" fx:id="submitButton" alignment="CENTER" maxHeight="60.0" maxWidth="200.0"
                mnemonicParsing="false" onAction="#submitButtonOnclick" text="Submit"/>
    </HBox>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
</VBox>
