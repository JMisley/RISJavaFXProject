<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="popupContainer" maxHeight="570.0" maxWidth="500.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.risjavafx.pages.orders.OrdersEditPopup">
    <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
        <VBox.margin>
            <Insets top="20.0" />
        </VBox.margin>
        <Label text="Edit Order" textFill="WHITE" underline="true">
            <font>
                <Font name="Century Gothic" size="24.0" />
            </font>
        </Label>
    </HBox>
    <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
        <VBox.margin>
            <Insets left="20.0" right="20.0" top="20.0" />
        </VBox.margin>
        <Label text="Order ID:" textFill="WHITE">
            <font>
                <Font name="Century Gothic" size="14.0" />
            </font>
            <HBox.margin>
                <Insets right="10.0" />
            </HBox.margin>
        </Label>
        <Label fx:id="orderIDLabel" text="101" textFill="#bb86fc">
            <font>
                <Font name="Century Gothic Bold" size="14.0" />
            </font>
        </Label>
    </HBox>
    <HBox HBox.hgrow="ALWAYS" />
    <HBox alignment="CENTER" nodeOrientation="LEFT_TO_RIGHT" VBox.vgrow="ALWAYS">
        <VBox.margin>
            <Insets left="20.0" right="20.0" top="20.0" />
        </VBox.margin>
        <Label text="Referral MD:" textFill="WHITE">
            <HBox.margin>
                <Insets right="10.0" />
            </HBox.margin>
            <font>
                <Font name="Century Gothic" size="14.0" />
            </font>
        </Label>
        <HBox HBox.hgrow="ALWAYS" />
        <ComboBox fx:id="referralMdComboBox" maxHeight="30.0" HBox.hgrow="ALWAYS">
            <HBox.margin>
                <Insets />
            </HBox.margin>
        </ComboBox>
    </HBox>
    <HBox VBox.vgrow="ALWAYS"><Label alignment="CENTER" contentDisplay="CENTER" prefHeight="18.0" prefWidth="522.0" text="Notes:" textAlignment="CENTER" textFill="WHITE">
        <HBox.margin>
            <Insets right="10.0" />
        </HBox.margin>
        <font>
            <Font name="Century Gothic" size="14.0" />
        </font>
    </Label></HBox>
    <HBox alignment="CENTER" nodeOrientation="LEFT_TO_RIGHT" VBox.vgrow="ALWAYS">
        <VBox.margin>
            <Insets left="20.0" right="20.0" top="20.0" />
        </VBox.margin>

        <TextArea fx:id="notesTextArea" maxHeight="30.0" HBox.hgrow="ALWAYS">
            <font>
                <Font name="Arial" size="14.0" />
            </font>
            <HBox.margin>
                <Insets right="10.00" />
            </HBox.margin>
        </TextArea>
    </HBox>
    <HBox VBox.vgrow="ALWAYS">

        <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="18.0" prefWidth="577.0" text="Report:" textAlignment="CENTER" textFill="WHITE" HBox.hgrow="ALWAYS">
            <HBox.margin>
                <Insets right="10.0" />
            </HBox.margin>
            <font>
                <Font name="Century Gothic" size="14.0" />
            </font>
        </Label>
    </HBox>

    <HBox alignment="CENTER" nodeOrientation="LEFT_TO_RIGHT" VBox.vgrow="ALWAYS">
        <VBox.margin>
            <Insets left="20.0" right="20.0" top="20.0" />
        </VBox.margin>

        <TextArea fx:id="reportTextArea" maxHeight="30.0" HBox.hgrow="ALWAYS">
            <font>
                <Font name="Arial" size="14.0" />
            </font>
            <HBox.margin>
                <Insets />
            </HBox.margin>
        </TextArea>
    </HBox>
    <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
        <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="60.0" />
        </VBox.margin>
        <Button id="primaryButton" fx:id="cancelButton" alignment="CENTER" contentDisplay="CENTER" maxHeight="60.0" maxWidth="200.0" mnemonicParsing="false" onAction="#cancelButtonOnclick" text="Cancel" />
        <HBox HBox.hgrow="ALWAYS" />
        <Button id="primaryButton" fx:id="submitButton" alignment="CENTER" maxHeight="60.0" maxWidth="200.0" mnemonicParsing="false" onAction="#submitButtonOnclick" text="Submit" />
    </HBox>
</VBox>
