        <HBox alignment="CENTER" VBox.vgrow="NEVER">
            <Button id="primaryButton" alignment="CENTER" contentDisplay="CENTER" minHeight="30.0" minWidth="100.0"
                    mnemonicParsing="false" onAction="#cancelButtonOnclick" text="Return to Page"/>
        </HBox>
    </VBox>
</StackPane>
