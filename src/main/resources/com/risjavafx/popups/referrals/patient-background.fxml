<StackPane fx:id="popupContainer" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
           prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.risjavafx.pages.referrals.background.PatientBackgroundPopup">
    <padding>
        <Insets bottom="20.0"/>
    </padding>
    <VBox prefHeight="200.0" prefWidth="100.0">
        <TabPane tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
            <Tab text="Family Illness">
                <StackPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                    <padding>
                        <Insets bottom="30.0" left="50.0" right="50.0" top="30.0"/>
                    </padding>
                    <VBox alignment="CENTER" prefHeight="303.0" prefWidth="425.0" spacing="10.0">
                        <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="50.0" prefWidth="600.0"
                               text="Family Illness" textAlignment="CENTER" textFill="WHITE">
                            <font>
                                <Font size="24.0"/>
                            </font>
                        </Label>
                        <ListView fx:id="FamilyIllnessList" prefHeight="195.0" prefWidth="600.0" VBox.vgrow="ALWAYS">
                            <VBox.margin>
                                <Insets/>
                            </VBox.margin>
                        </ListView>
                        <TextField fx:id="addFamilyIllnessTextArea" alignment="CENTER" VBox.vgrow="NEVER"/>
                        <HBox alignment="CENTER" spacing="50.0" VBox.vgrow="ALWAYS">
                            <Button id="primaryButton" alignment="CENTER" contentDisplay="CENTER" minHeight="30.0"
                                    minWidth="70.0" mnemonicParsing="false" onAction="#addListItemFamilyIllness"
                                    text="Add" HBox.hgrow="NEVER"/>
                            <Button id="primaryButton" alignment="CENTER" minHeight="30.0" minWidth="70.0"
                                    mnemonicParsing="false" onAction="#removeListItemFamilyIllness" text="Remove"
                                    HBox.hgrow="NEVER"/>
                        </HBox>
                    </VBox>
                </StackPane>
            </Tab>
            <Tab text="Food &amp; Medicine ">
                <StackPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                    <padding>
                        <Insets bottom="30.0" left="50.0" right="50.0" top="30.0"/>
                    </padding>
                    <VBox alignment="CENTER" layoutX="88.0" layoutY="35.0" prefHeight="303.0" prefWidth="425.0"
                          spacing="10.0">
                        <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="50.0" prefWidth="600.0"
                               text="Food &amp; Medicine Allergies" textAlignment="CENTER" textFill="WHITE">
                            <font>
                                <Font size="24.0"/>
                            </font>
                        </Label>
                        <ListView fx:id="FoodMedicineAllergyList" prefHeight="195.0" prefWidth="600.0"
                                  VBox.vgrow="ALWAYS">
                            <VBox.margin>
                                <Insets/>
                            </VBox.margin>
                        </ListView>
                        <TextField fx:id="addFoodMedicineAllergyTextArea" alignment="CENTER" VBox.vgrow="NEVER"/>
