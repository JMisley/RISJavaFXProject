                        <ListView fx:id="InstalledMedicalDevicesList" prefHeight="195.0" prefWidth="600.0"
                                  VBox.vgrow="ALWAYS">
                            <VBox.margin>
                                <Insets/>
                            </VBox.margin>
                        </ListView>
                        <TextField fx:id="addTextAreaMedicalDevices" alignment="CENTER" VBox.vgrow="NEVER"/>
                        <HBox alignment="CENTER" spacing="50.0" VBox.vgrow="ALWAYS">
                            <Button id="primaryButton" alignment="CENTER" contentDisplay="CENTER" minHeight="30.0"
                                    minWidth="70.0" mnemonicParsing="false"
                                    onAction="#addListNameInstalledMedicalDevices" text="Add" HBox.hgrow="NEVER"/>
