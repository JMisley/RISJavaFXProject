            <Tab text="Previous Surgeries">
                <StackPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                    <padding>
                        <Insets bottom="30.0" left="50.0" right="50.0" top="30.0"/>
                    </padding>
                    <VBox alignment="CENTER" layoutX="88.0" layoutY="35.0" prefHeight="303.0" prefWidth="425.0"
                          spacing="10.0">
                        <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="50.0" prefWidth="600.0"
                               text="Previous Surgeries" textAlignment="CENTER" textFill="WHITE">
                            <font>
                                <Font size="24.0"/>
                            </font>
                        </Label>
                        <ListView fx:id="PreviousSurgeriesList" prefHeight="195.0" prefWidth="600.0"
                                  VBox.vgrow="ALWAYS">
                            <VBox.margin>
                                <Insets/>
                            </VBox.margin>
                        </ListView>
                        <TextField fx:id="addTextAreaPreviousSurgeries" alignment="CENTER" VBox.vgrow="NEVER"/>
                        <HBox alignment="CENTER" spacing="50.0" VBox.vgrow="ALWAYS">
                            <Button id="primaryButton" alignment="CENTER" contentDisplay="CENTER" minHeight="30.0"
                                    minWidth="70.0" mnemonicParsing="false" onAction="#addListNamePreviousSurgeries"
                                    prefHeight="22.0" prefWidth="53.0" text="Add" HBox.hgrow="NEVER"/>
                            <Button id="primaryButton" alignment="CENTER" minHeight="30.0" minWidth="70.0"
                                    mnemonicParsing="false" onAction="#removeListNamePreviousSurgeries" text="Remove"
                                    HBox.hgrow="NEVER"/>
                        </HBox>
                    </VBox>
                </StackPane>
            </Tab>
            <Tab text="Current Medication">
                <StackPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                    <padding>
                        <Insets bottom="30.0" left="50.0" right="50.0" top="30.0"/>
                    </padding>
                    <VBox alignment="CENTER" layoutX="88.0" layoutY="35.0" prefHeight="303.0" prefWidth="425.0"
                          spacing="10.0">
                        <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="50.0" prefWidth="600.0"
                               text="Current Medication" textAlignment="CENTER" textFill="WHITE">
