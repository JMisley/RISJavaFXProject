<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="alertBox" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefWidth="400.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.risjavafx.controller.AlertPopup">
    <HBox alignment="CENTER">
        <VBox.margin>
            <Insets top="20.0"/>
        </VBox.margin>
        <ImageView fx:id="errorImage" fitHeight="150.0" fitWidth="75.0" pickOnBounds="true" preserveRatio="true"/>
    </HBox>
    <HBox alignment="CENTER">
        <VBox.margin>
            <Insets top="20.0"/>
        </VBox.margin>
        <Label id="alertBox-header" fx:id="headerLabel" text="Label">
            <font>
                <Font name="Century Gothic" size="24.0"/>
            </font>
        </Label>
    </HBox>
    <HBox alignment="CENTER">
        <VBox.margin>
            <Insets top="20.0"/>
        </VBox.margin>
        <Label id="alertBox-content" fx:id="contentLabel" text="Label">
            <font>
                <Font size="18.0"/>
            </font>
        </Label>
    </HBox>
    <HBox alignment="CENTER">
        <VBox.margin>
            <Insets bottom="20.0" top="40.0"/>
        </VBox.margin>
        <Button id="primaryButton" fx:id="exitButton" mnemonicParsing="false" onAction="#exitPopup" text="Button"/>
    </HBox>
</VBox>
