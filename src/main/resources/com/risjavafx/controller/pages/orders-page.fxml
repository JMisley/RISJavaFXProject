<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<?import javafx.scene.control.SplitPane?>

<BorderPane fx:id="mainContainer" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.risjavafx.controller.Orders">
    <center>
        <BorderPane>
            <top>
                <HBox fx:id="topContent"/>
            </top>
            <left>
                <HBox/>
            </left>
            <right>
                <HBox/>
            </right>
            <bottom>
                <HBox/>
            </bottom>
            <center>
                <StackPane alignment="BOTTOM_CENTER">
                    <SplitPane fx:id="centerContentContainer" id="loginContainer" dividerPositions="0.1"
                               orientation="VERTICAL">
                        <HBox fx:id="tableSearchBar"/>
                        <StackPane fx:id="centerContent"/>
                    </SplitPane>
                </StackPane>
            </center>
        </BorderPane>
    </center>
    <top>
        <HBox fx:id="titleBar" nodeOrientation="RIGHT_TO_LEFT" BorderPane.alignment="CENTER"/>
    </top>
</BorderPane>

